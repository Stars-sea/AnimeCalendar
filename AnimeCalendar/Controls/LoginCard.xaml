<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AnimeCalendar.Controls.LoginCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnimeCalendar.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Button Click="OnClick" Width="{x:Bind Width}" Height="{x:Bind Height}"
            HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="16" />
            </Grid.ColumnDefinitions>

            <ImageIcon Source="{x:Bind IconSource}" Grid.Column="0" Margin="8" />

            <TextBlock Text="{x:Bind DisplayText}" Grid.Column="1" Margin="8 0"
                   VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}"/>

            <FontIcon Glyph="&#xE76C;" Grid.Column="2" />
        </Grid>
    </Button>
</UserControl>
