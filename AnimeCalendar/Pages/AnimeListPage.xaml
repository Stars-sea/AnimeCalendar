<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AnimeCalendar.Pages.AnimeListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnimeCalendar.Pages"
    xmlns:controls="using:AnimeCalendar.Controls"
    xmlns:schemas="using:AnimeCalendar.Api.Bangumi.Schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ItemsView x:Name="SubjectList" x:FieldModifier="Private" SelectionMode="None">
            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="schemas:AirSubject">
                    <ItemContainer AutomationProperties.Name="{x:Bind NameCn}" Margin="8 4 24 4">
                        <controls:ImageCard IconSource="{x:Bind Images.Small}" Height="80" IconWidth="48" 
                                            HorizontalAlignment="Stretch" Padding="8" Tag="{x:Bind}"
                                            Click="ImageCard_Click">
                            <controls:AirSubjectInfo Subject="{x:Bind}" />
                        </controls:ImageCard>
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
        </ItemsView>

        <ProgressRing x:Name="LoadingRing" />
    </Grid>
</Page>
